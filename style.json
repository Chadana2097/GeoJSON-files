{
  "version": 8,
  "name": "Traffic Analysis - Graduated Styling",

  "sources": {
    "traffic-tiles": {
      "type": "vector",
      "url": "pmtiles://https://chadana2097.github.io/GeoJSON-files/traffic_analysis.pmtiles",
      "minzoom": 12,
      "maxzoom": 18
    }
  },

  "glyphs": "https://fonts.openmaptiles.org/{fontstack}/{range}.pbf",

  "layers": [
    {
      "id": "traffic-lines",
      "type": "line",
      "source": "traffic-tiles",
      "source-layer": "traffic_analysis",

      "layout": {
        "line-cap": "round",
        "line-join": "round"
      },

      "paint": {
        "line-width": 5,
        "line-color": [
          "step",
          ["get", "Join_Count"],
          "#66b2ff",
          26, "#0066cc",
          46, "#00aa00",
          76, "#ff8c00",
          168, "#c80000"
        ],
        "line-opacity": 0.8
      }
    }
  ]
}
